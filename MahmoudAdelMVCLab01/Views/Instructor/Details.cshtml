@{
	ViewData["Title"] = "Details";
	SelectList deptList = new SelectList(ViewBag.Departments, "Id", "Name");
	SelectList crsList = new SelectList(ViewBag.Courses, "Id", "Name");
}

@model Instructor;

<form method="post" asp-action="SaveChanges">
	<input hidden asp-for="Id" />
	<input type="checkbox" hidden value="false" name="isNew" />
	<div class="form-group">
		<label asp-for="Name"></label>
		<input asp-for="Name" class="form-control">
	</div>
	<div class="form-group">
		<label asp-for="Salary"></label>
		<input asp-for="Salary" class="form-control">
	</div>
	<div class="form-group">
		<label asp-for="Address"></label>
		<input asp-for="Address" class="form-control" placeholder="@(Model.Address??"---")">
	</div>
	<div class="form-group">
		<label asp-for="DeptID">Department ID</label>
		<select asp-for="DeptID" asp-items="deptList" class="form-control"></select>
	</div>
	<div class="form-group">
		<label asp-for="CourseID">Course ID</label>
		<select asp-for="CourseID" asp-items="crsList" class="form-control">
			@Model.CourseID??<option selected>Select Course </option>
		</select>
	</div>
	<button type="submit" class="btn btn-outline-primary">Save</button>
</form>