@{
	ViewData["Title"] = "Courses";
}

@model List<Course>


<div class="container text-center">
	<div class="row">
		<div class="col-12">
			<table class="table table-hover table-striped">
				<thead>
					<tr>
						<th scope="col">Course Name</th>
						<th scope="col">Passing Grade</th>
						<th scope="col">View Trainees Enrolled</th>
						<th scope="col">Edit Course Details</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var crs in Model) {
						<tr>
							<th scope="row">@crs.Name</th>
							<td>@crs.PassingGrade</td>
							<td>
								<a class="btn btn-outline-primary" asp-action="Details" asp-route-id="@crs.Id" asp-controller="Course">View</a>
							</td>
							<td>
								<a class="btn btn-outline-primary" asp-action="EditCourse" asp-route-id="@crs.Id" asp-controller="Course">Edit</a>
							</td>
						</tr>
					}
				</tbody>
			</table>
		</div>
		<div>
			<a class="btn btn-outline-primary" asp-action="AddCourse" asp-controller="Course">Add New Course</a>
		</div>
	</div>
</div>