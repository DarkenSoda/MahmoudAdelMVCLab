@model List<CourseWithTrainees>

@{
	if (Model == null) {
		<h1 class="alert">No Students Found!</h1>
		ViewData["Title"] = "No Trainees Found!";
	} else {
        if (Model.Any()) {
            ViewData["Title"] = $"{Model.First().CourseName.ToString()} Trainees";
        } else {
            ViewData["Title"] = "Trainees";
        }
	}
}

<div class="container text-center">
	<div class="row">
		<div class="col-12">
            @if (Model != null && Model.Any()) {
                <table class="table table-hover table-striped">
                    <thead>
                        <tr>
                            <th scope="col">Course Name</th>
                            <th scope="col">Passing Grade</th>
                            <th scope="col">Trainee Name</th>
                            <th scope="col">Trainee Grade</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var crs in Model) {
                            <tr>
                                <th scope="row">@crs.CourseName</th>
                                <td>@crs.PassingGrade</td>
                                <td>@crs.TraineeName</td>
                                <td>@crs.Grade</td>
                            </tr>
                        }
                    </tbody>
                </table>
            } else {
                <p>No Students Found.</p>
            }
		</div>
		<div>
			<a class="btn btn-outline-primary" asp-action="Index" asp-controller="Course">View All Courses</a>
		</div>
	</div>
</div>