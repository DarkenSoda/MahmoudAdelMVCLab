@{
	ViewData["Title"] = "Add Course";
}

@model Course

<form method="post" asp-action="SaveChanges">
	<input type="checkbox" hidden name="isNew" checked value="true" />
	<div class="form-group">
		<label asp-for="Name"></label>
		<input class="form-control" asp-for="Name" placeholder="Enter Course Name">
		<span class="text-danger" asp-validation-for="Name"></span>
	</div>
	<div class="form-group">
		<label asp-for="PassingGrade"></label>
		<input asp-for="PassingGrade" class="form-control" placeholder="Enter Passing Grade">
		<span class="text-danger" asp-validation-for="PassingGrade"></span>
	</div>
	<button type="submit" class="btn btn-outline-primary">Save</button>
</form>
