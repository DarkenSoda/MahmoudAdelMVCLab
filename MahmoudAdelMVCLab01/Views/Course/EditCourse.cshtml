@{
	ViewData["Title"] = "Edit Course";
}

@model Course

<form method="post" asp-action="SaveChanges">
	<input hidden asp-for="Id" />
	<input type="checkbox" hidden value="false" name="isNew" />
	<div class="form-group">
		<label asp-for="Name"></label>
		<input asp-for="Name" class="form-control">
		<span class="text-danger" asp-validation-for="Name"></span>
	</div>
	<div class="form-group">
		<label asp-for="PassingGrade"></label>
		<input asp-for="PassingGrade" class="form-control">
		<span class="text-danger" asp-validation-for="PassingGrade"></span>
	</div>
	<button type="submit" class="btn btn-outline-primary">Save</button>
</form>