@{
	ViewData["Title"] = "Details";
}

@model TraineeCourses;

<div class="d-flex justify-content-center align-items-center">
	<div class="card text-center" style="width: 20rem;">
		<img src="~/Images/@Model.TraineeImage" class="card-img-top">
		<div class="card-body">
			<h5 class="card-title">@Model.TraineeName</h5>
		</div>
		<ul class="list-group list-group-flush">
			<li class="list-group-item">Course: @Model.CourseName</li>
			<li class="list-group-item" style="color: @(Model.Degree>=Model.PassingGrade ? "green":"red")">Grade: @Model.Degree</li>
		</ul>
		<div class="card-body">
			<a class="btn btn-outline-primary" asp-action="Index" asp-controller="Trainee">Show All Trainees</a>
		</div>
	</div>
</div>